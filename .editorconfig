root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_import_merge_members = true
ij_typescript_import_sort_members = true
ij_typescript_spaces_within_imports = true
ij_typescript_import_sort_module_name = true
indent_size = 2

[*.yml]
indent_size = 2
indent_style = space

[*.xml]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
max_line_length = off
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
